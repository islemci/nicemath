{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist", 
    "emitDeclarationOnly": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}